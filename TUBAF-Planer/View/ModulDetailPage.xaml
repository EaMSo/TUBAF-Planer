<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TUBAF_Planer.View.ModulDetailPage"
             xmlns:viewmodel="clr-namespace:TUBAFPlaner.ViewModel"
             x:DataType="viewmodel:ModulDetailViewModel"
             Title="{Binding Modul.Coursename}">



    <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
        <FlexLayout Direction="Column" JustifyContent="Center">
            <Label Text="{Binding Modul.Coursename}" HorizontalOptions="Center"/>
            <Label Text="{Binding Modul.Type}" HorizontalOptions="Center"/>
            <Label Text="{Binding Modul.Weekday}" HorizontalOptions="Center"/>
            <Label Text="{Binding Modul.Start}" HorizontalOptions="Center"/>
            <Label Text="{Binding Modul.End}" HorizontalOptions="Center"/>
            <Label Text="{Binding Modul.Turnus}" HorizontalOptions="Center"/>
            <Label Text="{Binding Modul.Room}" HorizontalOptions="Center"/>
            <Label Text="{Binding Modul.Lecturer}" HorizontalOptions="Center"/>
        </FlexLayout>
    </StackLayout>

</ContentPage>