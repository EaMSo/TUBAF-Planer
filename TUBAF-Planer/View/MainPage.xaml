                <DataTemplate x:DataType="model:Modul">
                    <Frame Padding="2"
                           Grid.Column="{Binding DayColumn}"
                           Grid.ColumnSpan="{Binding TurnusColumnSpan}"
                           Grid.Row="{Binding TimeRowStart}"
                           VerticalOptions="Start"
                           HeightRequest="{Binding Size}"
                           BorderColor="{AppThemeBinding Light={StaticResource LabelTextDark}, Dark={StaticResource LabelText}}"
                           BackgroundColor="{AppThemeBinding Light={StaticResource BackColorPrimary}, Dark={StaticResource BackColorPrimaryDark}}">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer CommandParameter="{Binding .}"
                                                  Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:PlanViewModel}}, Path=GoToPlanDetailsCommand}"/>
                        </Frame.GestureRecognizers>
                        <VerticalStackLayout>
                            <Label Text="{Binding Coursename}"
                                        HorizontalOptions="Start"
                                        Style="{StaticResource SmallLabel}"
                                        HeightRequest="20"/>
                            <Label Text="{Binding Room}"
                                   HorizontalOptions="Start"
                                   Style="{StaticResource SmallLabel}"/>
                        </VerticalStackLayout>
