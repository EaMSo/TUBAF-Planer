<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:Modulmethods"
             xmlns:viewmodel="clr-namespace:TUBAFPlaner.ViewModel"
             x:DataType="viewmodel:PlanViewModel"             
             x:Class="TUBAF_Planer.MainPage"
             Style="{StaticResource BackColor}">

    <VerticalStackLayout>

        <Grid ColumnDefinitions="*,*,*,*,*,*,*,*,*,*,*,*,*,*"
              RowDefinitions="*, *"
                HeightRequest="50"
                WidthRequest="1800"
                Style="{StaticResource StackBackColor}">
            <Label Text="Montag"
                   HorizontalOptions="Center"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"/>
            <Label Text="Dienstag"
                   HorizontalOptions="Center"
                    Grid.Column="2"
                    Grid.ColumnSpan="2"/>
            <Label Text="Mittwoch"
                   HorizontalOptions="Center"
                    Grid.Column="4"
                    Grid.ColumnSpan="2"/>
            <Label Text="Donnerstag"
                   HorizontalOptions="Center"
                    Grid.Column="6"
                    Grid.ColumnSpan="2"/>
            <Label Text="Freitag"
                   HorizontalOptions="Center"
                    Grid.Column="8"
                    Grid.ColumnSpan="2"/>
            <Label Text="Samstag"
                   HorizontalOptions="Center"
                    Grid.Column="10"
                    Grid.ColumnSpan="2"/>
            <Label Text="Sonntag"
                   HorizontalOptions="Center"
                    Grid.Column="12"
                    Grid.ColumnSpan="2"/>
            <Label Text="gerade Woche"
                   HorizontalOptions="Center"
                   Grid.Column="0"
                   Grid.Row="2"/>
            <Label Text="ungerade Woche"
                   HorizontalOptions="Center"
                   Grid.Column="1"
                   Grid.Row="2"/>
        </Grid>

        <Grid ColumnDefinitions="*,*,*,*,*,*,*,*,*,*,*,*,*,*"
                HeightRequest="800"
                WidthRequest="1800"
                BackgroundColor="#232323">
            <CollectionView ItemsSource="{Binding Modules}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:Modul">
                        <Frame Padding="2"
                               BorderColor="DarkRed">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer CommandParameter="{Binding .}"
                                                      Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:PlanViewModel}}, Path=GoToPlanDetailsCommand}"/>
                            </Frame.GestureRecognizers>
                            <VerticalStackLayout>
                                <Label Text="{Binding Coursename}"
                                       HorizontalOptions="Start"
                                       Style="{StaticResource SmallLabel}"/>
                                <Label Text="{Binding Room}"
                                       HorizontalOptions="Start"
                                       Style="{StaticResource SmallLabel}"/>
                            </VerticalStackLayout>
                        </Frame>

                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
        <Button Text="ListTest"
                Command="{Binding GetModuleListCommand}"
                IsEnabled="{Binding IsNotBusy}">
            
        </Button>
    </VerticalStackLayout>
    

</ContentPage>
